<div class="container">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2">
      <h1 class="title">Add a new Flat</h1>
      <%= simple_form_for (@flat) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :number_of_guests, collection: 1..10, selected: 1 %>
        <%= f.input :price_per_night %>
        <%= f.submit "Add new flat", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
